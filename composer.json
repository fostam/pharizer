{
  "name": "fostam/pharizer",
  "description": "Create phar files / executables from a PHP project file structure",
  "keywords": ["phar", "executable", "archive", "binary", "script", "console"],
  "license": "Apache-2.0",
  "type": "library",
  "require": {
    "php": "^8.2",
    "ext-phar": "*",
    "symfony/yaml": "^7.3",
    "symfony/console": "^7.3"
  },
  "require-dev": {
    "phpunit/phpunit": "11.5.*"
  },
  "bin": [
    "bin/pharizer"
  ],
  "authors": [
    {
      "name": "Stefan Stammler",
      "email": "stefan@fostam.org"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Pharizer\\": "src/lib"
    }
  }
}
